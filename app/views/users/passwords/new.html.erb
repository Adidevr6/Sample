<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading text-center"><h4>Forgot your password?</h4></div>
        <div class="panel-body">
          <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>
            <%= devise_error_messages! %>

            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

            <div class="col-sm-offset-2 col-sm-3">
              <%= f.primary "Send me reset password instructions" %>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
          <%= link_to "Log in", new_session_path(resource_name) %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'pull-right' %>
        </div>
      </div>
    </div>
  </div>
</div>