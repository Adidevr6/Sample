<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading text-center"><h4>Log in</h4></div>
        <div class="panel-body">
          <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>

            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <%= f.password_field :password, autocomplete: "current-password" %>
            <%= f.check_box :remember_me %>
            <div class="col-sm-offset-4 col-sm-3">
              <%= f.primary "Log in" %>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
          <%= link_to "Sign up", new_registration_path(resource_name) %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right' %><br />
        </div>
      </div>
    </div>
  </div>
</div>